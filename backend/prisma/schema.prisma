generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserPrisma {
  id           Int                 @id @default(autoincrement())
  email        String              @unique
  name         String
  password     String
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  deletedAt    DateTime?
  reservations ReservationPrisma[]

  @@map("user")
}

enum CarStatusPrisma {
  AVAILABLE
  RESERVED

  @@map("car_status")
}

model CarPrisma {
  id           Int                 @id @default(autoincrement())
  mark         String
  year         Int
  price        Float
  status       CarStatusPrisma     @default(AVAILABLE)
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  deletedAt    DateTime?
  reservations ReservationPrisma[]

  @@map("car")
}

model ReservationPrisma {
  id         Int       @id @default(autoincrement())
  userId     Int
  carId      Int
  startDate  DateTime
  endDate    DateTime
  totalPrice Float
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime?

  user UserPrisma @relation(fields: [userId], references: [id])
  car  CarPrisma  @relation(fields: [carId], references: [id])

  @@map("reservation")
}
